<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-16dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Add more views here -->
            <ImageView
                android:id="@+id/btnGraficos"
                android:layout_width="330dp"
                android:layout_height="342dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/logo" />


            <EditText
                android:id="@+id/txtCPF_CNPJ"
                android:layout_width="365dp"
                android:layout_height="56dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="28dp"
                android:background="@drawable/edittext_background"
                android:ems="10"
                android:hint="CPF/CNPJ"
                android:inputType="text"
                android:textColorHint="@color/cinza"
                android:visibility="visible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnGraficos"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/txtSenha"
                android:layout_width="365dp"
                android:layout_height="56dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/edittext_background"
                android:ems="10"
                android:hint="Senha"
                android:inputType="textPassword"
                android:textColorHint="@color/cinza"
                android:visibility="visible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtCPF_CNPJ"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/btnEnter"
                android:layout_width="151dp"
                android:layout_height="67dp"
                android:layout_marginStart="128dp"
                android:layout_marginTop="50dp"
                android:backgroundTint="@color/blueButton"
                android:text="Entre"
                android:textSize="20sp"
                android:visibility="visible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtSenha"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/txtRegistrar"
                android:layout_width="147dp"
                android:layout_height="44dp"
                android:layout_marginStart="138dp"
                android:layout_marginEnd="130dp"
                android:text="NÃ£o tem conta? Registre-se"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnEnter"
                tools:ignore="HardcodedText" />


            <TextView
                android:id="@+id/progress_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/progressBar"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="140dp"
                android:text="Carregando..."
                android:textSize="22sp"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/progressBar" />

            <TextView
                android:id="@+id/txtLoading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Api Off"
                android:textSize="30sp"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="140dp"
                android:layout_height="129dp"
                android:layout_centerInParent="true"
                android:layout_marginStart="136dp"
                android:layout_marginTop="19dp"
                android:indeterminateTint="@color/blueButton"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnGraficos" />

            <CheckBox
                android:id="@+id/mostrarSenhas"
                android:layout_width="136dp"
                android:layout_height="52dp"
                android:layout_marginStart="16dp"
                android:text="Mostrar senha"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtSenha" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>